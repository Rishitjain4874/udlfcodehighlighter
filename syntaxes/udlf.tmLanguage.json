{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "UDLF Programming language",
	"patterns": [
		{
			"include": "#comments"
		},
		{
			"include": "#keywords"
		},
		{
			"include": "#datatypes"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#control"
		}		
	],
	"repository": {
		"keywords": {
			"patterns": [{
				"name": "keyword.control.udlf",
				"match": "\\b(external|internal|decoder|in_map|session)\\b"
		
		}]
		},
		"strings": {
			"name": "string.quoted.double.udlf",
			"begin": "\"",
			"end": "\"",
			"patterns": [{
					"name": "constant.character.escape.udlf",
					"match": "\\\\."
				}]
		},
		"comments": {
			"patterns": [{
					"name": "comment.line.udlf",
					"match": "//.*$"
				}]
		},
		"datatypes": {
			"patterns": [{
					"name": "storage.type.udlf",
					"match": "\\b(int|string|ascii|long|date|boolean|map)\\b"
				}]
		},
		"control": {
			"patterns": [{
					"name": "keyword.control.udlf",
					"match": "\\b()\\b"
				}]
		}
	},
	"scopeName": "source.udlf"
}